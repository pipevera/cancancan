<!DOCTYPE html>
<html>
  <head>
    <title>DeviseG10</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  		<p class="notice"><%= notice %></p>
       	<p class="alert"><%= alert %></p>
       	<ul>
       		<% if user_signed_in? %>
       			<li><%= link_to "cerrar sesion #{current_user.email}", destroy_user_session_path, method: :delete %></li>
       		<% else %>
       		<li><%= link_to "Logueate", new_user_session_path %></li>
       		<% end %>
       	</ul>

    <%= yield %>
  </body>
</html>
